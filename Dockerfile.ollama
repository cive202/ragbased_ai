FROM ubuntu:22.04

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    wget \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama manually (more reliable)
RUN wget https://github.com/ollama/ollama/releases/download/v0.12.5/ollama-linux-amd64 -O /usr/local/bin/ollama && \
    chmod +x /usr/local/bin/ollama

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements-simple.txt .
RUN pip3 install -r requirements-simple.txt

# Copy application files
COPY . .

# Expose port
EXPOSE 5000

# Set environment variables
ENV FLASK_ENV=production
ENV OLLAMA_URL=http://localhost:11434
ENV PORT=5000

# Create startup script
RUN echo '#!/bin/bash\n\
ollama serve &\n\
sleep 20\n\
ollama pull llama3.2 || echo "Failed to pull llama3.2"\n\
ollama pull bge-m3 || echo "Failed to pull bge-m3"\n\
python3 main.py' > start.sh && chmod +x start.sh

# Start the application
CMD ["./start.sh"]
