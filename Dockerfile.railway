FROM ubuntu:22.04

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama with better error handling
RUN curl -fsSL https://ollama.com/install.sh | sh || \
    (wget -O - https://ollama.com/install.sh | sh) || \
    echo "Ollama installation failed, continuing..."

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements-simple.txt .
RUN pip3 install -r requirements-simple.txt

# Copy application files
COPY . .

# Expose port
EXPOSE 5000

# Set environment variables
ENV FLASK_ENV=production
ENV OLLAMA_URL=http://localhost:11434
ENV PORT=5000

# Create startup script
RUN echo '#!/bin/bash\n\
ollama serve &\n\
sleep 15\n\
ollama pull llama3.2\n\
ollama pull bge-m3\n\
python3 main.py' > start.sh && chmod +x start.sh

# Start the application
CMD ["./start.sh"]